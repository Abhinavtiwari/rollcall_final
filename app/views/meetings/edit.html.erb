<div class="page-header">
  <h1>Editing Meeting #<%= @meeting.id %></h1>
</div>

<%= form_tag(meeting_url(@meeting), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :held_on, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :held_on, @meeting.held_on, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :course_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <select name="course_id" class="form-control">
        <% Course.all.each do |course| %>
          <% if course.id == @meeting.course_id %>
            <% previously_selected = "selected" %>
          <% else %>
            <% previously_selected = "" %>
          <% end %>

          <option value="<%= course.id %>" <%= previously_selected %>><%= course.title %></option>

        <% end %>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Meeting", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
